{% extends 'base.html.twig' %}

{% block title %}Work index{% endblock %}

{% block body %}
    <h1>Liste des projets</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Languages</th>
                <th>Date</th>
                <th>Description</th>
                <th>Link_web</th>
                <th>Link_repo</th>
                <th>Img</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for work in works %}
            <tr>
                <td>{{ work.id }}</td>
                <td>{{ work.name }}</td>
                <td>{{ work.languages }}</td>
                <td>{{ work.date }}</td>
                <td>{{ work.description }}</td>
                <td>{{ work.linkWeb }}</td>
                <td>{{ work.linkRepo }}</td>
                <td>{{ work.img }}</td>
                <td>
                    <a href="{{ path('app_work_show', {'id': work.id}) }}">show</a>
                    <a href="{{ path('app_work_edit', {'id': work.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_work_new') }}">Create new</a>
{% endblock %}
